{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "eqeqeq": [
          "error",
          "always",
          {
            "null": "ignore"
          }],
        "no-trailing-spaces": [
          "error",
          { 
            "ignoreComments": true 
          }],
        "object-curly-spacing": [
            "error", 
            "always"
        ],
        "arrow-spacing": [
            "error", { "before": true, "after": true }
        ],
        "eol-last": [
          "error",
          "always"
        ]
    }
}

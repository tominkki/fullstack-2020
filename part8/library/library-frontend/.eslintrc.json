{
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true 
  },
  "extends": [ 
      "eslint:recommended",
      "plugin:react/recommended"
  ],
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "plugins": [
      "react", "jest"
  ],
  "rules": {
      "indent": [
          "error",
          2  
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ],
      "eqeqeq": [
        "error",
        "always",
        {
          "null": "ignore"
        }],
      "no-trailing-spaces": [
        "error",
        { 
          "ignoreComments": true 
        }],
      "object-curly-spacing": [
          "error", 
          "always"
      ],
      "arrow-spacing": [
          "error", { "before": true, "after": true }
      ],
      "eol-last": [
        "error",
        "always"
      ],
      "no-console": 0,
      "react/prop-types": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}